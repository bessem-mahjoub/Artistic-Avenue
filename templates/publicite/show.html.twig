{% extends 'base.html.twig' %}

{% block title %}Publicite{% endblock %}

{% block body %}
    <h1>Publicite</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ publicite.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ publicite.name }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img src="{{ publicite.getImage }}" alt="{{ publicite.name }}" class="card-img-top">
</td>
            </tr>
            <tr>
                <th>Link</th>
                <td>{{ publicite.link }}</td>
            </tr>
            <tr>
                <th>StartDate</th>
                <td>{{ publicite.startDate ? publicite.startDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>EndDate</th>
                <td>{{ publicite.endDate ? publicite.endDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>IsPublished</th>
                <td>{{ publicite.isPublished ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>UpddatedAt</th>
                <td>{{ publicite.upddatedAt ? publicite.upddatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_publicite_index') }}">back to list</a>

    <a href="{{ path('app_publicite_edit', {'id': publicite.id}) }}">edit</a>

    {{ include('publicite/_delete_form.html.twig') }}
{% endblock %}
