{% extends 'baseback.html.twig' %}

{% block title %}My Participation{% endblock %}

{% block body %}
    <h1>My Participation</h1>

    <table class="table">
        <thead>
            <tr>
                
                <th>Nom</th>
                <th>adresse</th>
                <th>Date</th>
                <!-- Ajouter d'autres colonnes nécessaires -->
            </tr>
        </thead>
        <tbody>
        {% for event in events %}
            <tr>
                
                <td>{{ event.nomOrg}}</td>
                <td>{{ event.adresse }}</td>
                <p>Date : {{ event.datedebut|date('d/m/Y') }}</p>
    <p>Date : {{ event.datefin|date('d/m/Y') }}</p>
                <!-- Afficher d'autres attributs d'événement nécessaires -->
            </tr>
        {% else %}
            <tr>
                <td colspan="4">No participation found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
