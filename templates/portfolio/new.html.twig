{% extends 'base.html.twig' %}

{% block title %}New Portfolio{% endblock %}

{% block stylesheets %}
    
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
     <style>
        h1 {
            color: #444;
            font-family: 'Open Sans', sans-serif;
            font-size: 36px;
            margin-bottom: 30px;
            text-align: center;
            text-transform: uppercase;
        }
        .form-control {
            border-color: #ccc;
            border-radius: 0;
            box-shadow: none;
            font-size: 16px;
            height: 40px;
            padding: 10px;
        }
        .form-control:focus {
            border-color: #8bc34a;
            box-shadow: none;
        }
        .btn-primary {
            background-color: #8bc34a;
            border-color: #8bc34a;
            color: #fff;
            font-size: 16px;
            text-transform: uppercase;
            transition: background-color .3s ease;
        }
        .btn-primary:hover,
        .btn-primary:focus {
            background-color: #689f38;
            border-color: #689f38;
            color: #fff;
        }
        .form-group {
            margin-bottom: 20px;
        }
        .form-label {
            font-size: 16px;
            font-weight: bold;
            text-transform: uppercase;
        }
        .portfolio-image {
            max-width: 100%;
            height: auto;
            margin-top: 10px;
        }
        .file-upload {
  display: inline-block;
  padding: 12px 24px;
  cursor: pointer;
  background-color: #8bc34a;
  color: #fff;
  border-radius: 4px;
  font-size: 16px;
  text-transform: uppercase;
  transition: background-color .3s ease;
}

.file-upload:hover {
  background-color: #689f38;
}

    </style>
{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <h1>Create New Portfolio</h1>

                {{ form_start(form) }}
                {{ form_widget(form) }}
           
                {% if form.image.vars.value is not empty %}
                    <img src="{{ asset('uploads/' ~ form.image.vars.value) }}" class="portfolio-image" alt="Portfolio image">
                {% endif %}
              

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
                {{ form_end(form) }}

                <a href="{{ path('app_portfolio_index') }}" class="btn btn-link">Back to list</a>
            </div>
        </div>
    </div>
{% endblock %}
